REM/ Mise en surbrillace du bouton au passage de la sourie
FONCTION/ ICO_Utl.MouseEnter()
	IMAGEBOX/ /MODIF:ICO_Utl
		.IMAGE = "%HOST_OS%/MEDIA/ICONES/UTL/UTLIcoS.PNG"
		CREER/
	FIN/ IMAGEBOX

	TEXTEBLOC/ /MODIF:NOM_Utl
		.PX = "60"
		.COULEURTEXTE = "255,255,255"
		CREER/
	FIN/ TEXTEBLOC
FIN/ FONCTION

REM/ Enlève la surbrillace du bouton au passage de la sourie
FONCTION/ ICO_Utl.MouseLeave()
	IMAGEBOX/ /MODIF:ICO_Utl
		.IMAGE = "%HOST_OS%/MEDIA/ICONES/UTL/UTLIco.PNG"
		CREER/
	FIN/ IMAGEBOX

	TEXTEBLOC/ /MODIF:NOM_Utl
		.PX = "-1000"
		CREER/
	FIN/ TEXTEBLOC
FIN/ FONCTION

REM/ Affiche la fenetre de paramètre utilisateur
FONCTION/ ICO_Utl.Click()
	EXE/ %HOST_OS%/PARA/UTL.cpc
FIN/ FONCTION

REM/ Mise en surbrillace du bouton au passage de la sourie
FONCTION/ ICO_para.MouseEnter()
	IMAGEBOX/ /MODIF:ICO_para
		.IMAGE = "%HOST_OS%/MEDIA/ICONES/PARA/PARAIcoS.PNG"
		CREER/
	FIN/ IMAGEBOX

