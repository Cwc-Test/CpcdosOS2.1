// Explorer GUI program test

set/ actual_path = C:\CPCDOS\OS

// ===== Build window =====
Window/ file_explorer_window

        .title          = "File explorer GUi test"
        .parameters     = "TYPE:0 SIZ:1 SIZBTN:1"
        .px             = "50"
        .py             = "100"
        .sx             = "500"
        .sy             = "300"
        .opacity        = "255"
        .WindowColor    = "100,100,100"
        .TitleColor     = "255,200,100"
        .backcolor      = "100,100,100"
        .events         = "%_exe_path_%"

        @#window_handle create/
End/ Window

// ===== Build GUI objects in the window =====
picturebox/ img_Drive
	.handle		= "%window_handle%"
	.parameters	= "IMGAUTO:0"
	.PX		= "2"
	.PY		= "0"
	.sx		= "22"
	.sy		= "22"
	.Image		= "OS/MEDIA/GUI/MDRIVE.PNG"
	.opacity	= "255"
        .events         = "%_exe_path_%"
	create/
end/ Picturebox

picturebox/ img_Previous
	.handle		= "%window_handle%"
	.parameters	= "IMGAUTO:0"
	.PX		= "28"
	.PY		= "4"
	.sx		= "13"
	.sy		= "13"
	.Image		= "OS/MEDIA/GUI/PREV.PNG"
	.opacity	= "255"
        .events         = "%_exe_path_%"
	create/
end/ Picturebox

picturebox/ img_Next
	.handle		= "%window_handle%"
	.parameters	= "IMGAUTO:0"
	.PX		= "45"
	.PY		= "4"
	.sx		= "13"
	.sy		= "13"
	.Image		= "OS/MEDIA/GUI/NEXT.PNG"
	.opacity	= "255"
        .events         = "%_exe_path_%"
	create/
end/ Picturebox

// %actual_path%
Textbox/ txt_path
        .Handle         = "%window_handle%"
        .Parameters     = "BORD:1 COL:1"
        .Text           = ""
        .PX             = "64"
        .PY             = "2"
        .BackColor      = "110,110,110"
        .TextColor      = "250,250,250"
        .sx             = "400"
        .sy             = "18"
        .events         = "%_exe_path_%=KeyEnter"
        create/
End/ Textbox

explorer/ explore_gui
        .handle         = "%window_handle%"
        .parameters     = ""
        .px             = "0"
        .py             = "23"
        .sx             = "500"
        .sy             = "279"
        .opacity        = "255"
        .textcolor      = "250,250,250"
        .backcolor      = "100,100,100"
        .text           = ""
        .events         = "%_exe_path_%"
        create/
End/ explorer

// ===== GUI events =====

Function/ img_Drive.MouseClick()
        // Display drive list

        // Modify explorer path
	explorer/ /modif:explore_gui
		.text = ""
		create/
	end/ explorer

End/ Function

Function/ img_Previous.MouseClick()
        // Back path

End/ Function

Function/ img_Next.MouseClick()
        // fordward path

End/ Function


Function/ explore_gui.MouseClick()
        // Update textbox path

        // Get path text
        explorer/ /modif:explore_gui
                @#new_path .text
        end/ explorer

        // Modify path text in the textbox
        textbox/ /modif:txt_path
		.text = "%new_path%"
		create/
	end/ textbox
End/ Function


Function/ txt_path.KeyEnter(texte)
        // Valid and display wrote path from textbox
        
        // Stay in level 1, because for read variable %texte%, this is in level 1
        ccp/ /set.level = 1

        // Modify explorer path
	explorer/ /modif:explore_gui
		.text = "%texte%"
		create/
	end/ explorer

End/ Function



Function/ file_explorer_window.Resize(sizeup)
	// If user change window size

	// Getting window size informations
	window/ /modif:file_explorer_window
		@#Win_Size_X .sx
		@#Win_Size_Y .sy
	end/ window
	
        // According textbox size
        set/ Win_Size_Y = /C(%Win_Size_Y% - 23)

        // And modify explorer object size
	explorer/ /modif:explore_gui
		.sx     = "%Win_Size_X%"
		.sy     = "%Win_Size_Y%"
		create/
	end/ explorer

End/ function














